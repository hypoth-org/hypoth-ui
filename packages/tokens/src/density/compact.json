{
  "$type": "dimension",
  "$description": "Compact density tokens - tighter spacing for data-dense UIs",
  "$mode": "compact",
  "spacing": {
    "1": { "$value": "0.125rem", "$type": "dimension", "$description": "4px base / 2" },
    "2": { "$value": "0.25rem", "$type": "dimension", "$description": "Tight spacing" },
    "3": { "$value": "0.375rem", "$type": "dimension" },
    "4": { "$value": "0.5rem", "$type": "dimension" },
    "5": { "$value": "0.625rem", "$type": "dimension" },
    "6": { "$value": "0.75rem", "$type": "dimension" },
    "8": { "$value": "1rem", "$type": "dimension" },
    "10": { "$value": "1.25rem", "$type": "dimension" },
    "12": { "$value": "1.5rem", "$type": "dimension" }
  },
  "component": {
    "button": {
      "padding-x": { "$value": "0.75rem", "$type": "dimension" },
      "padding-y": { "$value": "0.25rem", "$type": "dimension" },
      "height-sm": { "$value": "1.5rem", "$type": "dimension", "$description": "24px" },
      "height-md": { "$value": "1.75rem", "$type": "dimension", "$description": "28px" },
      "height-lg": { "$value": "2rem", "$type": "dimension", "$description": "32px" }
    },
    "input": {
      "padding-x": { "$value": "0.5rem", "$type": "dimension" },
      "padding-y": { "$value": "0.25rem", "$type": "dimension" },
      "height-sm": { "$value": "1.5rem", "$type": "dimension", "$description": "24px" },
      "height-md": { "$value": "1.75rem", "$type": "dimension", "$description": "28px" },
      "height-lg": { "$value": "2rem", "$type": "dimension", "$description": "32px" }
    },
    "card": {
      "padding": { "$value": "0.75rem", "$type": "dimension" }
    },
    "list-item": {
      "padding-x": { "$value": "0.5rem", "$type": "dimension" },
      "padding-y": { "$value": "0.25rem", "$type": "dimension" }
    },
    "table-cell": {
      "padding-x": { "$value": "0.5rem", "$type": "dimension" },
      "padding-y": { "$value": "0.25rem", "$type": "dimension" }
    },
    "icon": {
      "size-sm": { "$value": "0.875rem", "$type": "dimension", "$description": "14px" },
      "size-md": { "$value": "1rem", "$type": "dimension", "$description": "16px" },
      "size-lg": { "$value": "1.25rem", "$type": "dimension", "$description": "20px" }
    }
  }
}
