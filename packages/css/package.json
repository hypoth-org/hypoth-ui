{
  "name": "@ds/css",
  "version": "0.0.0",
  "type": "module",
  "description": "CSS layers and base styles for the design system",
  "exports": {
    ".": "./dist/index.css",
    "./layers/reset": "./src/layers/reset.css",
    "./layers/tokens": "./src/layers/tokens.css",
    "./layers/base": "./src/layers/base.css",
    "./layers/components": "./src/layers/components.css",
    "./layers/utilities": "./src/layers/utilities.css",
    "./layers/overrides": "./src/layers/overrides.css",
    "./package.json": "./package.json"
  },
  "files": ["dist", "src/layers"],
  "dependencies": {
    "@ds/tokens": "workspace:*",
    "@ds/wc": "workspace:*"
  },
  "scripts": {
    "build": "postcss src/index.css -o dist/index.css",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "cssnano": "^6.0.0",
    "vitest": "^1.0.0"
  }
}
