{
  "name": "@ds/a11y-audit",
  "version": "0.0.0",
  "type": "module",
  "description": "Accessibility audit tooling for automated CI checks, manual checklists, and conformance reporting",
  "bin": {
    "a11y-audit": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./dist/schemas/*",
    "./package.json": "./package.json"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts src/cli/index.ts --format esm --dts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "audit": "tsx src/cli/index.ts audit",
    "validate": "tsx src/cli/index.ts validate",
    "report": "tsx src/cli/index.ts report"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.0",
    "commander": "^12.0.0",
    "handlebars": "^4.7.8"
  }
}
