{
  "name": "@ds/wc",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "description": "Lit-based Web Components with Light DOM",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./primitives": {
      "types": "./dist/primitives.d.ts",
      "import": "./dist/primitives.js"
    },
    "./form-controls": {
      "types": "./dist/form-controls.d.ts",
      "import": "./dist/form-controls.js"
    },
    "./overlays": {
      "types": "./dist/overlays.d.ts",
      "import": "./dist/overlays.js"
    },
    "./navigation": {
      "types": "./dist/navigation.d.ts",
      "import": "./dist/navigation.js"
    },
    "./data-display": {
      "types": "./dist/data-display.d.ts",
      "import": "./dist/data-display.js"
    },
    "./feedback": {
      "types": "./dist/feedback.d.ts",
      "import": "./dist/feedback.js"
    },
    "./layout": {
      "types": "./dist/layout.d.ts",
      "import": "./dist/layout.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:a11y": "vitest run --config vitest.a11y.config.ts"
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@ds/primitives-dom": "workspace:*",
    "date-fns": "^4.1.0",
    "lit": "^3.1.0",
    "lucide": "^0.468.0"
  },
  "peerDependencies": {
    "@ds/css": "workspace:*",
    "@ds/tokens": "workspace:*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@ds/test-utils": "workspace:*",
    "happy-dom": "^13.10.0",
    "jest-axe": "^8.0.0",
    "playwright-core": "^1.40.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
