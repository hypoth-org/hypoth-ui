{
  "name": "@ds/wc",
  "version": "0.0.0",
  "type": "module",
  "description": "Lit-based Web Components with Light DOM",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:a11y": "vitest run --config vitest.a11y.config.ts"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "peerDependencies": {
    "@ds/css": "workspace:*",
    "@ds/tokens": "workspace:*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@ds/primitives-dom": "workspace:*",
    "happy-dom": "^13.10.0",
    "jest-axe": "^8.0.0",
    "playwright-core": "^1.40.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
