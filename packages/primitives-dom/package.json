{
  "name": "@ds/primitives-dom",
  "version": "0.0.0",
  "type": "module",
  "description": "Accessibility and behavior utilities for DOM",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:a11y": "vitest run --config vitest.a11y.config.ts"
  },
  "devDependencies": {
    "happy-dom": "^13.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
