{
  "name": "@ds/docs-renderer-next",
  "version": "0.0.0",
  "type": "module",
  "description": "Next.js documentation site renderer",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/nav-sidebar": {
      "types": "./components/nav-sidebar.tsx",
      "import": "./components/nav-sidebar.tsx"
    },
    "./components/mdx-renderer": {
      "types": "./components/mdx-renderer.tsx",
      "import": "./components/mdx-renderer.tsx"
    },
    "./styles/globals.css": "./styles/globals.css",
    "./package.json": "./package.json"
  },
  "files": ["dist", "app", "components", "styles"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ds/docs-core": "workspace:*",
    "@ds/docs-content": "workspace:*",
    "@ds/wc": "workspace:*",
    "@ds/next": "workspace:*",
    "@ds/tokens": "workspace:*",
    "@ds/css": "workspace:*",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "tsup": "^8.0.0"
  }
}
