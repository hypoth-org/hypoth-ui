{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Baseline Component Manifests Contract",
  "description": "Expected manifest entries for all 6 baseline components",
  "type": "object",
  "properties": {
    "button": {
      "type": "object",
      "properties": {
        "id": { "const": "button" },
        "name": { "const": "Button" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "button" },
            "keyboard": { "type": "array", "contains": { "const": "Enter" } }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        },
        "tokensUsed": { "type": "array", "minItems": 1 }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    },
    "link": {
      "type": "object",
      "properties": {
        "id": { "const": "link" },
        "name": { "const": "Link" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "link" },
            "keyboard": { "type": "array", "contains": { "const": "Enter" } }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    },
    "text": {
      "type": "object",
      "properties": {
        "id": { "const": "text" },
        "name": { "const": "Text" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "custom" }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    },
    "icon": {
      "type": "object",
      "properties": {
        "id": { "const": "icon" },
        "name": { "const": "Icon" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "img" }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    },
    "spinner": {
      "type": "object",
      "properties": {
        "id": { "const": "spinner" },
        "name": { "const": "Spinner" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "status" }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    },
    "visually-hidden": {
      "type": "object",
      "properties": {
        "id": { "const": "visually-hidden" },
        "name": { "const": "VisuallyHidden" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "enum": ["alpha", "beta", "stable"] },
        "editions": { "type": "array", "contains": { "const": "core" } },
        "accessibility": {
          "type": "object",
          "properties": {
            "apgPattern": { "const": "custom" }
          },
          "required": ["apgPattern", "keyboard", "screenReader"]
        }
      },
      "required": ["id", "name", "version", "status", "editions", "accessibility"]
    }
  },
  "required": ["button", "link", "text", "icon", "spinner", "visually-hidden"]
}
